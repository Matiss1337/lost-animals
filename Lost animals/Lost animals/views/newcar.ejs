<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>New car</title>
</head>

<body>
    <form method="post" action="car" enctype="multipart/form-data">
        <h1>Add new car</h1>
        <label>Add photo:</label><br>
        <div>
            <input type="file" name="image" required>
        </div>
        <div>
            <textarea name="title" id="title" style="font-family:sans-serif;font-size:1.2em;" required>Model</textarea>
        </div>
        <div>
            <textarea name="comments" id="comments" style="font-family:sans-serif;font-size:1.2em;"
                required>info</textarea>
        </div>
        <div>
            <input type="number" name="year" placeholder="year" required>
        </div>
        <div>
            <input type="number" name="price" placeholder="price" required>
            <span> &euro;</span>
        </div>
        <div>
            <input type="tel" name="tel" placeholder="your phonenumber..." required>
        </div>
        <div>
            <input type="email" name="email" placeholder="your email..." required>
        </div>
        <div>
            <input type="submit" value="Add car">
        </div>
    </form>


    <div>
        <h1>Check out the cars we have:</h1>
        <div>
            <% cars.forEach(function(car){ %>
                <div class="card mb-6">
                    <div class="row">
                        <div class="col-md-2">
                            <img class="img-fluid" alt="" src="<%=car.image%>">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= car.title %>
                                </h5>

                                <p class="card-text">
                                    <%= car.comments %>
                                </p>
                                <p class="card-text">
                                    <%= car.year %>
                                </p>
                                <p class="card-text">
                                    <%= car.price %>
                                </p>
                                <p class="card-text">
                                    <%= car.tel %>
                                </p>
                                <p class="card-text">
                                    <%= car.email %>
                                </p>

                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>

    </div>
</body>

</html>